<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="item_viewholder_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/white_text_dark_mode</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="item_viewholder_regular_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/white_text_dark_mode</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:titleTextColor">@color/white_text_dark_mode</item>
    </style>

    <style name="placeholder_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white_text_dark_mode</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:layout_marginTop">@dimen/placeholder_text_margin_top</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="team_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_text_dark_mode</item>
        <item name="android:textSize">@dimen/super_big_text_size</item>
        <item name="android:paddingVertical">@dimen/margin_8</item>
        <item name="android:paddingHorizontal">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="team_member">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/white_text_dark_mode</item>
        <item name="android:paddingHorizontal">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
    </style>

    <style name="edit_text">
    <item name="android:layout_marginHorizontal">@dimen/edit_text_margin_horizontal</item>
    <item name="android:layout_marginVertical">@dimen/edit_text_margin_vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingVertical">16dp</item>
    <item name="android:textColorHint">@color/white_text_dark_mode</item>
    <item name="android:textSize">@dimen/regular_text_size</item>
    <item name="android:textColor">@color/black_text</item>
    <item name="android:textCursorDrawable">@color/blue_main</item>
    <item name="android:fontFamily">@font/ys_display_regular</item>
    <item name="android:background">@drawable/background_edit_text_dark_mode</item>
    <item name="android:paddingHorizontal">@dimen/edit_text_paddings_vertical</item>
    <item name="android:drawableEnd">@drawable/ic_search</item>
    <item name="android:maxLines">1</item>
    <item name="android:imeOptions">actionDone</item>
    <item name="android:inputType">text</item>
    <item name="android:singleLine">true</item>
    </style>



</resources>