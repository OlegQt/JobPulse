<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".root.presentation.RootActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="@string/filters_fragment_title" />

    <!-- TODO: Update blank fragment layout -->

    <!-- TODO: Временные кнопки для отработки переходов на след фрагменты -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_choose_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work place"

        android:layout_marginStart="8dp"

        app:layout_constraintTop_toBottomOf="@id/navigation_bar"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>